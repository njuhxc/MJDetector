    var iflag = 0;    var icontainer = document.getElementById('icontainer');        var standardbody=(document.compatMode=="CSS1Compat")? document.documentElement : document.body //create reference to common "body" across doctypes    function mouseFollower(e){        /*  .  */    if (window.event)    { // for IE        icontainer.style.top = (window.event.y-15)+standardbody.scrollTop+'px';        icontainer.style.left = (window.event.x-10)+standardbody.scrollLeft+'px';    }    {        icontainer.style.top = (e.pageY-15)+'px';        icontainer.style.left = (e.pageX-17)+'px';    }    }    document.onmousemove = function(e) {        if (iflag == 0) {mouseFollower(e);}    }    