	function substr_count( haystack, needle, offset, length ) {	// Count the number of substring occurrences	var pos = 0, cnt = 0;	if(isNaN(offset)) offset = 0;	if(isNaN(length)) length = 0;	offset--;	while( (offset = haystack.indexOf(needle, offset+1)) != -1 ){		if(length > 0 && (offset+needle.length) > length){			return false;		} else{			cnt++;		}	}	return cnt;}	var replytouserid = 0;function ajax_renewcommentspost(content){		document.getElementById('ajsbm').disabled = true;	$.post('/ajax/comments.php', {lng: 'ru', event_id : 324185, replytouserid: replytouserid, last_comment_id : lastcommentid, content : content}, function(data) {		 		if(data=="_EOF_"){			ajax_renewcommentspost(content);			return false;		}				lastcommentid = (data.substring(0, 10) * 1);			document.getElementById('comments_block').innerHTML = data.substring(10);		document.getElementById('ajsbm').disabled = false;		document.getElementById('cmf').value = "";				replytouserid = 0;				$('#replytobar').fadeOut();									});				}function showreplytobar(fio){	document.getElementById('replytobarfio').innerHTML = " &nbsp; <img src='//cdn.livetvcdn.net/img/s_b.gif'> <a class='small' OnClick='return false;' href='#'><font color=\"#000000\"><b>" + fio + "</b></font></a>";		$('#replytobar').fadeIn();}