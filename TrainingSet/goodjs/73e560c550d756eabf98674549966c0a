    jQuery(document).ready(function() {        setInterval(function() {            jQuery('.link-toggle').toggleClass('hover');        }, 2000);    });            $(document).ready(function(){    	$(window).scroll(function() {                if ($(window).scrollTop() >= 100) {                    $('.fixed-ads-right').css( {                    	'position' : 'absolute',                    	'right' : '-10px',                		'top': $(window).scrollTop() - 100                	});                } else {                	$('.fixed-ads-right').css( {                		'position' : 'relative',                		'top' : '0px!important'                		                	});                }            });    });    