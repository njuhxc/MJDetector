function refreshlivetextdo(){	if(dactiv==1){		refreshlivetext();	}		}function refreshlivetext(){	document.getElementById('rfr').src = "//cdn.livetvcdn.net/img/loading.gif";	$.get('/ajax/livetext.php', {id: 325562}, function(data) {		if(data=="stop"){			document.getElementById('rfr').style.display = 'none';		}else{						dar = explode("|", data, 3)							document.getElementById('ltdiv').innerHTML = dar[1];				document.getElementById('rfr').style.display = 'none';				setTimeout("canrefreshlivetext()", 30000);			//lttmut = setTimeout("refreshlivetextdo()", 300000); !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!		}			});	}function canrefreshlivetext(){	document.getElementById('rfr').src = "//cdn.livetvcdn.net/img/refresh.gif";	document.getElementById('rfr').style.display = 'block';	}	