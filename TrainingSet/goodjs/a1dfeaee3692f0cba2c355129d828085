<script  language="JavaScript" type="text/JavaScript">function verifica_email(camp) {if  (!EW_hasValue(camp.adresa_email_newsletter, "TEXT" )) {       if  (!EW_onError(camp, camp.adresa_email_newsletter, "TEXT", "Pentru abonare este necesar sa completati adresa de email !\n Va rugam introduceti o adresa de email valida !"))          return false;}if  (EW_hasValue(camp.adresa_email_newsletter, "TEXT" )){	if  (!EW_checkemail(camp.adresa_email_newsletter.value)) {	       alert("Adresa de email nu este corecta !\n Va rugam introduceti o adresa de email valida !")           return false;		}	if  (!EW_checksemn(camp.adresa_email_newsletter.value)) {		   alert("Adresa de email contine caractere invalide !(<,?, >)")           return false;        }}return true;}