				// Pinterest shared resources				var s = document.createElement("script");				s.type = "text/javascript";				s.async = true;				s.setAttribute('data-pin-hover', true);				s.src = window.location.protocol + "//assets.pinterest.com/js/pinit.js";				var x = document.getElementsByTagName("script")[0];				x.parentNode.insertBefore(s, x);				// if 'Pin it' button has 'counts' make container wider				jQuery(window).load( function(){ jQuery( 'li.share-pinterest a span:visible' ).closest( '.share-pinterest' ).width( '80px' ); } );			