	if(document.location.hash){		if(document.location.hash.substring(0, 6)=='#reply'){				ar = document.location.hash.split("|", 3);		if((ar[0]=="#reply")&&(ar[1].length<=7)&&(ar[2].length<=40)){			document.getElementById('cmf').focus();			replytouserid = ar[1];			showreplytobar(ar[2]);			$('html, body').animate({ scrollTop: $('#replytobar').offset().top }, 1000);		}			}else{		ar = document.location.hash.split("_");		if(ar[0]=="#webplayer"){			arr = ar[1].split("|");			show_webplayer(arr[0], arr[1], arr[2], arr[3], arr[4], arr[5], arr[6]);		}	}}	window.addEventListener("message", function(event) {	    	if((event.origin=="http://cdn.livetvcdn.net")||(event.origin=="https://cdn.livetvcdn.net")){				count = (event.data.split('|').length - 1);				if(count > 2){			arr = event.data.split("|");			$('#wbplrifr').attr('src', '//cdn.livetvcdn.net/export/webplayer.iframe.php?t=' + arr[0] + '&c=' + arr[1] + '&lang=' + arr[6] + '&eid=' + arr[2] + '&lid=' + arr[3] + '&ci=' + arr[4] + '&si=' + arr[5] + '');			document.location = 'http://' + document.location.host + document.location.pathname + '#webplayer_' + arr[0] + '|' + arr[1] + '|' + arr[2] + '|' + arr[3] + '|' + arr[4] + '|' + arr[5] + '|' + arr[6];			}	}		});		function show_webplayer(type, c, eid, lid, ci, si, lng){	$('#bugoverlay').fadeIn();		document.location = 'http://' + document.location.host + document.location.pathname + '#webplayer_' + type + '|' + c + '|' + eid + '|' + lid + '|' + ci + '|' + si + '|' + lng;		data = "<div class=\"wpcxx\"><img OnClick=\"hide_webplayer();\" style=\"cursor: pointer;\" src=\"//cdn.livetvcdn.net/img/xxx.png\"></div><iframe allowfullscreen id=\"wbplrifr\" scrolling=\"no\" frameBorder=0 width=728 height=570 src='//cdn.livetvcdn.net/export/webplayer.iframe.php?t=" + type + "&c=" + c + "&lang=" + lng + "&eid=" + eid + "&lid=" + lid + "&ci=" + ci + "&si=" + si + "'>not supported</iframe>" + 			"<scr" + "ipt>$(document).keyup(function(e) { if (e.keyCode == 27) { hide_webplayer() } });  </scr" + "ipt>" +			"<scr" + "ipt>$('#bugoverlay').click(function() {{ hide_webplayer(); } });  </scr" + "ipt>";			if(eid > 0){				data = data + "<iframe style=\"margin-top: 8px;\" width=728 height=20 frameborder=0 scrolling=\"no\" src='//cdn.livetvcdn.net/cache/links/" + lng + "." + eid + ".new.html?" + Math.floor(new Date().getTime() / 100000) + "'></iframe>";	}		htmlString = $('#comblockabs').html();		$('#comblockabs').html('');		document.getElementById('wbplr').style.top = (getBodyScrollTop() + 6) + "px";		$('#wbplr').html(data + '<div id="comblockabswp" style="background-color: #ffffff; width: 688px; padding: 20px;">' + htmlString + '</div>').show();			}function hide_webplayer(){	$('document').unbind('keyup');	$('#bugoverlay').unbind('click');	htmlString = $('#comblockabswp').html();			document.location = 'http://' + document.location.host + document.location.pathname + '#_';	$('#wbplr').fadeOut();	$('#bugoverlay').fadeOut();	$('#wbplr').html('');		$('#comblockabs').html(htmlString);	}		function renewlinks2(eid, lng, clearint){		$.post('/ajax/renewlinks.php', {eid: eid, lng: lng}, function(data) {						if(data!="no_links"){						$('#links_block').html(data);						$('#whelint').hide();						if(clearint){								clearInterval(intcln);						}		}		if(!clearint){			$('#reloadlinkswait').hide();			$('#reloadlinksdone').show();			setTimeout(canrefreshlinks, 15000);		}			});	}	function canrefreshlinks(){	$('#reloadlinksdone').hide();	$('#reloadlinksbutton').show();	}function canrefreseventlive(){	$('#reloadliveforevent').show();}function renewliveforevent2(gid, lng){			$('#reloadliveforevent').hide();	$.post('/ajax/renewliveforevent.php', {gid: eid, lng: lng}, function(data) {				$('#liveforevent_block').html(data);				setTimeout(canrefreseventlive, 55000);			});	}