function Reg_Poll_3 (bid,frm){path = frm.poll_bid.value;var bid;var xmlhttp;for (var i = 0; i < frm.blogpoll.length; i++){ if (frm.blogpoll[i].checked){ rad_val = frm.blogpoll[i].value; break; }else{ rad_val = 0; }}if(window.ActiveXObject){ xmlhttp = new ActiveXObject("Microsoft.XMLHTTP"); } else if(window.XMLHttpRequest){ xmlhttp = new XMLHttpRequest();}xmlhttp.onreadystatechange=function() {document.getElementById("loadpoll"+bid).style.display="block";document.getElementById("register_poll"+bid).style.display="none"; if (xmlhttp.readyState==4 && xmlhttp.status==200) {document.getElementById("register_poll"+bid).style.display="block";document.getElementById("loadpoll"+bid).style.display="none";document.getElementById("register_poll"+bid).innerHTML=xmlhttp.responseText; } };xmlhttp.open("GET","/Polls/"+path+"?blogpolls=1&blogpoll="+rad_val+"&poll_bid="+bid,true);xmlhttp.send();}