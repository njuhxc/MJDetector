 // ���ѧҧ� best $(document).ready(function() { $(".c_best_content").hide(); $("ul.t_best li:first").addClass("c_active").show(); $(".c_best_content:first").show(); $("ul.t_best li").click(function() { $("ul.t_best li").removeClass("c_active"); $(this).addClass("c_active"); $(".c_best_content").hide(); var activeTab = $(this).find("a").attr("href"); $(activeTab).fadeIn(); return false; });});