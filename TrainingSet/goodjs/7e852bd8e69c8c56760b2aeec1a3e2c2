$(document).ready(function() { 	$('head').append('<meta name="viewport" content="width=device-width, initial-scale=1.0">');    $('head').append('<link rel="stylesheet" href="http://www.galeon.com/floating-share.css" type="text/css" media="screen" />');    if (window.screen.width<600){	makeResponsive($("body"));	$('body').prepend('<ul class="share-btn-wrp"><li class="facebook button-wrap">Facebook</li><li class="whatsapp button-wrap">Whatsapp</li><li class="twitter button-wrap">Tweet</li><li class="email button-wrap">Email</li></ul>');    }    else{	$('body').prepend('<ul class="share-btn-wrp"><li class="facebook button-wrap">Facebook</li><li class="twitter button-wrap">Tweet</li><li class="gplus button-wrap">Google +</li><li class="email button-wrap">Email</li></ul>');    }    var pageTitle   = document.title; //HTML page title    var pageUrl     = location.href; //Location of this page        $('.share-btn-wrp li').click(function(event){        var shareName = $(this).attr('class').split(' ')[0]; //get the first class name of clicked element        ga('send', 'event', 'Engagement', shareName, 'ShareBar', 1, {nonInteraction: true});        switch(shareName) //switch to different links based on different social name        {            case 'facebook':                OpenShareUrl('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(pageUrl) + '&amp;title=' + encodeURIComponent(pageTitle));                break;            case 'twitter':                OpenShareUrl('http://twitter.com/home?status=' + encodeURIComponent(pageUrl));                break;            case 'gplus':                OpenShareUrl('https://plus.google.com/share?url=' + encodeURIComponent(pageUrl));                break;            case 'whatsapp':                OpenShareUrl('whatsapp://send?text='+encodeURIComponent(pageUrl));                break;            case 'email':                OpenShareUrl('mailto:?subject=Mira este enlace de Galeon&body=' + pageUrl);                break;        }            });});function OpenShareUrl(openLink){        window.open(openLink,'_blank');        return false;    }function has(element, child){    return (element.html().indexOf(child)>-1);}function moveContent(element){    var div = getContainer();    div.append(element.html());    $("#contenedor").append(div);    element.remove();    }function getContainer(){    var div = $("<div></div>");    div.css({'font-size': '16px','background-color': '#fff'});    return div;}function makeResponsive(element){    $('img').css({'max-width' : '100%' , 'height' : 'auto'});    $("td[nowrap='true']").wrap("tr");        $('body').css('background-imagen','none');    $("body").find("table").first().before('<div id="contenedor"></div>');    element.find('td').each(function(){        if(!has($(this),"<script")){            if (!has($(this),"<table")) {                moveContent($(this));            }            else {                $(this).children().not("table").each(function(){                    moveContent($(this));                });                            }        }    });}