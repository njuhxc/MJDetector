function sinvote(){	var obj = document.all.VoteList_Single;	var litem ="";	for (i = 0 ; i < obj.length; i ++)	{		if (obj[i].checked)		{		litem = obj[i].value;		}	}	if(litem=="")	{		alert("???????:????????????????,�ݧ�!");		return(false);	}	else	{		var url = "/Modules/Other/Vote/?VoteID=" + document.all.VoteID.value +"&ListItem=" + litem + "&VoteType=0&ViewType=0";		var popup = window.open(url,'sinvote','top=50,left=50,toolbar=0,scrollbars=yes,resizable=no,width=620,height=400');		return;	}}//